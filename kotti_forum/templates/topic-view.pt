<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      i18n:domain="kotti_forum"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="topic-view content">

    <h1>${api.context.title}</h1>
    <p class="description">
      ${api.context.description}
    </p>
    <p class="body">
      ${structure: api.context.body}
    </p>
    <div tal:condition="vote_data['Count'] > 0 or api.context.votable"
         tal:define="keys ['Sum', 'Count', 'Plus', 'Zero', 'Minus']">
      <ul class="nav nav-pills">
        <tal:repeat tal:repeat="key keys">
          <li class='active'>
            <a href="/">${key}: ${vote_data[key]}</a>
          </li>
          <li>&nbsp;</li>
          <li tal:condition="key == 'Count'">&nbsp;&nbsp;&nbsp;</li>
        </tal:repeat>
      </ul>
    </div>
    <table tal_condition="items" class="table table-condensed">
      <thead>
        <tr>
          <th>Status</th>
          <th>Title</th>
          <th>Creator</th>
          <th>Creation Date</th>
          <th>Modification Date</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="item items" class="post">
          <tal:block tal:define="url request.resource_url(item)">
          <td>
            <p tal:condition="exists: item.vote" tal:switch="item.vote">
              <span tal:case="3"><i class="icon-plus-sign"></i>&nbsp;3</span>
              <span tal:case="2"><i class="icon-plus-sign"></i>&nbsp;2</span>
              <span tal:case="1"><i class="icon-plus-sign"></i>&nbsp;1</span>
              <span tal:case="0"><i class="icon-adjust"></i>&nbsp;0</span>
              <span tal:case="-1"><i class="icon-minus"></i>&nbsp;1</span>
              <span tal:case="-2"><i class="icon-minus"></i>&nbsp;2</span>
              <span tal:case="-3"><i class="icon-minus"></i>&nbsp;3</span>
            </p>
            <p tal:condition="python:not hasattr(item, 'vote')">
              --
            </p>
          </td>
          <td>
              <a href="${url}">
                  ${item.title}
              </a>
          </td>
          <td>
              <a href="${url}">
                  ${item.owner}
              </a>
          </td>
          <td>
              <a href="${url}">
                  ${api.format_date(item.creation_date)}
              </a>
          </td>
          <td>
              <a href="${url}">
                  ${api.format_date(item.modification_date)}
              </a>
          </td>
          </tal:block>
        </tr>
      </tbody>
    </table>

   <tal:pagination tal:condition="settings['use_batching']"
                   metal:use-macro="macros.macros['pagination']" />

  </article>
</html>
